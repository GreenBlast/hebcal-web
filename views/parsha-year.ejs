<%- await include('partials/header.ejs', {
  title: `Torah Readings ${hyear} - Hebcal`,
}) -%>
<link rel="canonical" href="https://www.hebcal.com/sedrot/<%=hyear%>?i=<%=il?'on':'off'%>">
<% if (hyear <= 5513 || hyear > todayHebYear + 100) { %><meta name="robots" content="noindex, nofollow"><% } %>
<% if (hyear >= 5513) { %><link rel="prev" href="/sedrot/<%=hyear - 1%>?i=<%=il?'on':'off'%>"><%}%>
<% if (hyear < todayHebYear + 100) { %><link rel="next" href="/sedrot/<%=hyear + 1%>?i=<%=il?'on':'off'%>"><%}%>
</head>
<body>
<%- await include('partials/navbar.ejs') -%>
<div class="container">
<div class="row mt-2">
<div class="col">
<% if (hyear <= 5513) { -%>
<%- await include('partials/warning-1752.ejs') -%>
<% } -%>
<h2>Torah Readings <%=hyear%> <span class="h4 small text-body-secondary"><%=il ? 'Israel üáÆüá±' : 'Diaspora'%></span></h2>
<div class="btn-toolbar d-print-none mt-1 mb-2">
<a class="btn btn-secondary btn-sm me-2 mb-2" role="button" rel="nofollow" href="<%-dlhref%>" download="<%=dlfilename%>">
<svg class="icon align-top"><use xlink:href="<%=spriteHref%>#bi-calendar3"></use></svg>
Download Calendar .ics</a>
<a class="btn btn-secondary btn-sm me-2 mb-2" role="button" rel="nofollow" href="fullkriyah-<%=il?'il-':''%><%=hyear%>.csv" download="fullkriyah-<%=il?'il-':''%><%=hyear%>.csv">
  <svg class="icon align-top"><use xlink:href="<%=spriteHref%>#noun_CSV_1658749"></use></svg>
  Download Leyning (Full Kriyah)</a>
<%   if (triCycleStartYear) { %>
<a class="btn btn-secondary btn-sm me-2 mb-2" role="button" rel="nofollow" href="triennial-<%=il?'il-':''%><%=triCycleStartYear%>-<%=triCycleStartYear+2%>.csv" download="triennial-<%=il?'il-':''%><%=triCycleStartYear%>-<%=triCycleStartYear+2%>.csv">
  <svg class="icon align-top"><use xlink:href="<%=spriteHref%>#noun_CSV_1658749"></use></svg>
  Download Leyning (Triennial)</a>
<%   } %>
</div>

<div class="table-responsive">
<table class="table table-striped">
<colgroup>
  <col><col><col><col>
</colgroup>
<thead>
<tr>
  <th>Date</th>
  <th>Hebrew Date</th>
  <th>Parsha</th>
  <th>Notes</th>
</tr>
</thead>
<tbody class="table-group-divider">
<% let prev = -1;
for (const item of items) { %>
<tr>
  <td><time datetime="<%= item.d.format('YYYY-MM-DD') %>"><span class="text-nowrap"><%= item.d.format('MMMM D') %></span><%= item.d.year() !== prev ? item.d.format(', YYYY') : '' %></time></td>
  <td class="text-nowrap"><%= item.hd.getDate() %> <%= item.hd.getMonthName() %></td>
  <td><a href="<%=item.url%>"><%= item.title %></a></td>
  <td><% for (const holiday of item.holidays) { %><div class="mb-2"><% if (holiday.url) { %><a class="link-success" href="<%= holiday.url %>"><% } else { %><span class="text-success"><% } %><%=holiday.title%><% if (holiday.url) { %></a><% } else { %></span><% } %></div><% } %></td>
</tr>
<% prev = item.d.year();
} %>
</tbody>
</table>
</div>

<div class="d-flex gx-2 mt-2 justify-content-between d-print-none">
<div>
<a class="btn btn-outline-secondary me-2" href="/sedrot/<%=hyear - 1%>?i=<%=il?'on':'off'%>"><span aria-hidden="true">‚Üê&nbsp;</span><%=hyear - 1%></a>
</div>
<div>
<a class="btn btn-outline-secondary ms-2" href="/sedrot/<%=hyear + 1%>?i=<%=il?'on':'off'%>"><%=hyear + 1%><span aria-hidden="true">&nbsp;‚Üí</span></a>
</div>
</div>

</div><!-- .col -->
</div><!-- .row -->
<%- await include('partials/footer.ejs') -%>
