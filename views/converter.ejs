<% include partials/header-noclose.ejs %>
<link rel="alternate" type="application/rss+xml" title="RSS" href="/etc/hdate-en.xml">
<meta name="description" content="Convert between Gregorian/civil and Hebrew/Jewish calendar dates. <%= first %> = <%= second %>">
<style>
#converter-results {
 margin-top: 32px;
 margin-bottom: 32px;
 text-align: center;
}
#converter-results .big-list {
  margin-bottom: 6px;
  font-size: 29px;
  font-weight: 200;
  line-height: normal;
}
#converter-results .jumbo {
  font-size: 37px;
}
.nobr { white-space: nowrap }
</style>
</head>
<body>
<% include partials/navbar.ejs %>
<div class="container">
<div id="content">
<div class="row">
<div class="col-sm-12">
<% if (typeof message !== 'undefined') { -%>
<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= message %>
  <% if (typeof help !== 'undefined') { %>
    <%= help %>   
  <% } %>
</div><!-- .alert -->
<% } -%>
<% if (gy < 1752) { -%>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
<strong>Warning!</strong>
Results for year 1752 C.E. and earlier may be inaccurate.
<p>Hebcal does not take into account a correction of ten days that
was introduced by Pope Gregory XIII known as the Gregorian
Reformation.<sup><a
href="https://en.wikipedia.org/wiki/Adoption_of_the_Gregorian_calendar">[1]</a></sup></p>
</div><!-- .alert -->
<% } -%>
<div id="converter-results">
<ul class="list-unstyled">
<li class="big-list"><span class="nobr"><%= first %></span> = <strong class="nobr"><%= second %></strong></li>
<li dir="rtl" lang="he" class="hebrew big-list jumbo"><%= hebrew %></li>
<% events.forEach((ev) => {%>
  <li><a href="<%= ev.url() %>"><%= ev.render() %></a></li>
<% })%>
</ul>
</div><!-- #converter-results -->
<div id="converter-form" class="d-print-none">
<div class="row">
<div class="col col-sm-6">
<h5>Convert from Gregorian to Hebrew date</h5>
<form method="get" action="/converter/">
<div class="row">
<div class="col col-sm-auto mr-1">
<input type="text" class="form-control" style="width:48px" name="gd" placeholder="day" value="<%= gd %>" size="2" maxlength="2" id="gd" pattern="\d*">
</div><!-- .col -->
<div class="col col-sm-auto mr-1">
<select name="gm" class="form-select">
  <option <%- (gm === 1) ? 'selected' : '' %> value="1">January</option>
  <option <%- (gm === 2) ? 'selected' : '' %> value="2">February</option>
  <option <%- (gm === 3) ? 'selected' : '' %>  value="3">March</option>
  <option <%- (gm === 4) ? 'selected' : '' %>  value="4">April</option>
  <option <%- (gm === 5) ? 'selected' : '' %>  value="5">May</option>
  <option <%- (gm === 6) ? 'selected' : '' %>  value="6">June</option>
  <option <%- (gm === 7) ? 'selected' : '' %>  value="7">July</option>
  <option <%- (gm === 8) ? 'selected' : '' %>  value="8">August</option>
  <option <%- (gm === 9) ? 'selected' : '' %>  value="9">September</option>
  <option <%- (gm === 10) ? 'selected' : '' %>  value="10">October</option>
  <option <%- (gm === 11) ? 'selected' : '' %>  value="11">November</option>
  <option <%- (gm === 12) ? 'selected' : '' %>  value="12">December</option>
</select>
</div><!-- .col -->
<div class="col col-sm-auto mr-1">
<input type="text" class="form-control" style="width:66px" name="gy" placeholder="year" value="<%= gy %>" size="4" maxlength="4" id="gy" pattern="\d*">
</div><!-- .col -->
<div class="col col-sm-auto">
<div class="form-check">
  <input class="form-check-input" type="checkbox" name="gs" value="on" <%= gs ? ' checked' : '' %> id="gs">
  <label class="form-check-label" for="gs">After sunset</label>
</div><!-- .form-check -->
</div><!-- .col -->
</div><!-- .row -->
<div class="col">
<button type="submit" name="g2h" value="1" class="btn btn-primary">
  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-repeat" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M2.854 7.146a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L2.5 8.207l1.646 1.647a.5.5 0 0 0 .708-.708l-2-2zm13-1a.5.5 0 0 0-.708 0L13.5 7.793l-1.646-1.647a.5.5 0 0 0-.708.708l2 2a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0 0-.708z"/>
    <path fill-rule="evenodd" d="M8 3a4.995 4.995 0 0 0-4.192 2.273.5.5 0 0 1-.837-.546A6 6 0 0 1 14 8a.5.5 0 0 1-1.001 0 5 5 0 0 0-5-5zM2.5 7.5A.5.5 0 0 1 3 8a5 5 0 0 0 9.192 2.727.5.5 0 1 1 .837.546A6 6 0 0 1 2 8a.5.5 0 0 1 .501-.5z"/>
  </svg>
  Convert to Hebrew
</button>
</div><!-- .col -->
</form>
</div><!-- .col col-sm-6 -->

<div class="col col-sm-6">
<h5>Convert from Hebrew to Gregorian date</h5>
<form method="get" action="/converter/">
<div class="row">
<div class="col col-sm-auto mr-1">
<input type="text" class="form-control" style="width:48px" name="hd" placeholder="day" value="<%= hd %>" size="2" maxlength="2" id="hd" pattern="\d*">
</div><!-- .col -->
<div class="col col-sm-auto mr-1">
<select name="hm" class="form-select">
  <option <%- (hm === 1) ? 'selected' : '' %> value="Nisan">Nisan</option>
  <option <%- (hm === 2) ? 'selected' : '' %> value="Iyyar">Iyyar</option>
  <option <%- (hm === 3) ? 'selected' : '' %> value="Sivan">Sivan</option>
  <option <%- (hm === 4) ? 'selected' : '' %> value="Tamuz">Tamuz</option>
  <option <%- (hm === 5) ? 'selected' : '' %> value="Av">Av</option>
  <option <%- (hm === 6) ? 'selected' : '' %> value="Elul">Elul</option>
  <option <%- (hm === 7) ? 'selected' : '' %> value="Tishrei">Tishrei</option>
  <option <%- (hm === 8) ? 'selected' : '' %> value="Cheshvan">Cheshvan</option>
  <option <%- (hm === 9) ? 'selected' : '' %> value="Kislev">Kislev</option>
  <option <%- (hm === 10) ? 'selected' : '' %> value="Tevet">Tevet</option>
  <option <%- (hm === 11) ? 'selected' : '' %> value="Shvat">Sh'vat</option>
  <option <%- (hm === 12 && !hleap) ? 'selected' : '' %> value="Adar">Adar</option>
  <option <%- (hm === 12 && hleap) ? 'selected' : '' %> value="Adar1">Adar I</option>
  <option <%- (hm === 13) ? 'selected' : '' %> value="Adar2">Adar II</option>
</select>
</div><!-- .col -->
<div class="col col-sm-auto mr-1">
<input type="text" class="form-control" style="width:66px" name="hy" placeholder="year" value="<%= hy %>" size="4" maxlength="4" id="hy" pattern="\d*">
</div><!-- .col -->
<div class="col">
<button type="submit" name="h2g" value="1" class="btn btn-primary">
  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-repeat" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M2.854 7.146a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L2.5 8.207l1.646 1.647a.5.5 0 0 0 .708-.708l-2-2zm13-1a.5.5 0 0 0-.708 0L13.5 7.793l-1.646-1.647a.5.5 0 0 0-.708.708l2 2a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0 0-.708z"/>
    <path fill-rule="evenodd" d="M8 3a4.995 4.995 0 0 0-4.192 2.273.5.5 0 0 1-.837-.546A6 6 0 0 1 14 8a.5.5 0 0 1-1.001 0 5 5 0 0 0-5-5zM2.5 7.5A.5.5 0 0 1 3 8a5 5 0 0 0 9.192 2.727.5.5 0 1 1 .837.546A6 6 0 0 1 2 8a.5.5 0 0 1 .501-.5z"/>
  </svg>
  Convert to Gregorian
</button>
</div><!-- .col -->
</div><!-- .row -->
</form>
</div><!-- .col col-sm-6 -->
</div><!-- .row -->
</div><!-- #converter-form -->

<hr class="d-print-none">
<div class="row d-print-none">
<div class="col col-sm-6 col-sm-offset-3">
